<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Produk</title>
  </head>
  <body>
    <h3>Edit</h3>
    <% data.forEach((products) => { %>
    <form action="/update-product" method="post">
        <label for="product_id">Product Id</label><br>
        <input type="text" name="product_id" value="<%= products.productId%>"><br>
        <label for="nama_product">Nama Product</label><br>
        <input type="text" name="nama_product" value="<%= products.nama_product%>"><br>
        <label for="harga">Harga</label><br>
        <input type="text" name="harga" value="<%= products.harga%>"><br>
        <label for="quantity">Quantity</label><br>
        <input type="text" name="quantity" value="<%= products.quantity%>"><br>
        <label for="category_id">Category</label><br>
        <input type="text" name="category_id" value="<%= products.CategoryId%>"><br>
        <input type="hidden" name="product_id_old" value="<%= products.productId%>">
        <button type="submit">Simpan!</button>
        <a href="/">Cancel</a>
      </form>
    <% }) %>

  </body>
</html>
